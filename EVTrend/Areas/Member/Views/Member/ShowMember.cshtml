@using EVTrend.Areas.Member.Models
@model MemberModels;
@{
    ViewData["Title"] = "會員中心";
}
<html>
    <head>
        <script src="~/js/jqAccountUnit.js"></script>
    </head>
    <body>
        <h1>@ViewData["Title"]</h1>
        <div class="container">
            <div class="row">
                <form asp-controller="Member" asp-action="Update" method="post">
                    <div class="mt-2 col-12 form-inline">
                        <label asp-for="Account"></label>：
                        <input type="text" class="form-control" readonly asp-for="Account">
                    </div>
                    <div class="mt-2 col-12 form-inline">
                        <label asp-for="Username"></label>：
                        <input type="text" asp-for="Username" class="form-control required">
                    </div>
                    <div class="mt-2 col-12 form-inline">
                        <label asp-for="Gender"></label>：
                        <select class="form-control required" asp-for="Gender" asp-items="Model.Genders"> </select>
                    </div>
                    <div class="mt-2 col-12 form-inline">
                        <label asp-for="Birthday"></label>：
                        <input type="date" asp-for="Birthday" class="form-control required" onchange="BirthdayCheck()">
                    </div>
                    <div class="mt-2 col-12 form-inline">
                        <button type="submit" class="btn btn-primary">儲存</button>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>